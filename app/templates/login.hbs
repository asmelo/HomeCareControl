<div class="fundo-login"></div>
<div id="login-page" class="row login-page">
  <div class="col s12 m4 offset-m4 z-depth-4 card-panel">
    <form class="login-form" {{action "signIn" on="submit"}}>
      <div class="row div-titulo-login">
        <div class="col s12 center">
          <img src="/images/login-logo.png" alt="" class="circle responsive-img valign profile-image-login">
          <p class="center login-form-text">Home-Care Control</p>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="material-icons prefix pt-5">person_outline</i>
          {{input id="email" class="email" value=email required=true placeholder="E-mail" maxlength=50}}
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix pt-5">lock_outline</i>
          {{input id="senha" class="senha" type="password" required=true value=senha placeholder="Senha" maxlength=20}}
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button type="submit" class="submit btn waves-effect waves-light col s12">Login</button>
        </div>
      </div>
      <div class="row">
        <div class="col s6">
          <p class="center medium-small">
            <a class="link-text" style="cursor: pointer" role="button" {{action "recoverPassword"}}>
              Recuperar Senha
            </a>
          </p>
        </div>
        <div class="col s6">
          <p class="center medium-small">
            {{#link-to "conta" class="link-text" }}Criar conta{{/link-to}}
          </p>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row formulario">
  <div class="col s12 m10 offset-m1">
    <div class="card">
      <div class="card-content">
        <form {{action "cadastrarPaciente" on="submit"}}>
          <div class="row">
            <h4>Novo Paciente</h4>
            <div class="input-field col s12 m2">
              <label>Número</label>
              {{input id="inputNumero" class="nome" type="number" value=numero required=true maxlength="10"}}              
            </div>
            <div class="input-field col s12 m6">
              <label>Nome do paciente</label>
              {{input id="inputNome" class="nome" value=nome required=true maxlength=33}}
            </div>
            <div class="input-field col s12 m2" alt="Frequência semanal">
              <label>Freq.</label>
              {{input id="inputFrequencia" class="nome" type="number" value=frequenciaSemanal maxlength="3"}}                            
            </div>
            <div class="input-field col s12 m2 combo">
              <div class="labelForm">De outro prof.</div>
              {{#power-select selected=deOutroProfissional
                              options=listaDeOutroPaciente
                              onchange=(action "selecionaDeOutroProfissional")
                              as |item|}}
                {{item}}
              {{/power-select}}
            </div>
          </div>          
          <div class="row">
            <div class="col s12 right-align">
              <button type="submit" class="salvar btn wave-effects wave-light">Salvar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{modal-confirm idModal="modalConfirmarReativacao" title="Confirmação" content="Já existe um paciente inativo com este nome, deseja reativá-lo?" actionConfirm=(action "reativarPaciente")}}

{{outlet}}

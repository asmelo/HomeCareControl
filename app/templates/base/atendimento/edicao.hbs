<div class="row formulario">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <form {{action "atualizarAtendimento" on="submit"}}>
          <div class="row">
            <h4>Atualizar Atendimento</h4>
            <div class="input-field col s12 m3">
                <label>Data</label>
                {{pikaday-input value=atendimento.dtAtendimento onSelection=(action 'selecionaData') required=true format="DD/MM/YYYY"}}
            </div>
            <div class="input-field col s12 m6 combo">
              <div class="labelForm">Paciente</div>
              {{#power-select selected=atendimento.paciente
                              options=pacientes
                              onchange=(action "selecionaPaciente")
                              searchField="nome" as |paciente|}}
                  {{paciente.nome}}
              {{/power-select}}
            </div>
            <div class="col s12 m3">
                {{input-text label="Valor" value=atendimento.valor required=true mask="#.##0,00" reverseMask=true}}
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
                <button class="btn wave-effects wave-light" {{action "cancelarEdicao"}}>Cancelar</button>
                <button class="btn wave-effects wave-light" {{action "confirmarExclusao"}}>Excluir</button>
                <button type="submit" class="btn wave-effects wave-light">Atualizar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{modal-confirm idModal="modalConfirmarExclusao" title="Confirmação" content="Deseja excluir este atendimento?" actionConfirm=(action "excluirAtendimento")}}
{{outlet}}

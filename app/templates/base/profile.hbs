<div class="row formulario">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <form {{action "atualizaProfile" on="submit"}}>
          <div class="row">
            <h4>Meus Dados</h4>
            <div class="col s12 m6">
              {{input-text id="nome" label="Nome" inputClass="nome" value=nome maxlength=30}}
            </div>
            <div class="col s12 m6">
              {{input-text id="registro" label="Registro" inputClass="registro" value=registro maxlength=20}}
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button type="submit" class="salvar btn wave-effects wave-light">Salvar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{outlet}}

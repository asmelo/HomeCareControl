<div class="row formulario">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <form {{action "atualizarAssistencia" on="submit"}}>
            <div class="row">
                <h4>Atualizar Assistência</h4>
                <div class="input-field col s12 m2">
                <label>Data</label>
                {{pikaday-input readonly="readonly" value=assistencia.dtAssistencia onSelection=(action "selecionaData") format="DD/MM/YYYY"}}
                </div>
                <div class="input-field col s12 m5 combo">
                <div class="labelForm">Setor</div>
                {{#power-select selected=assistencia.setor
                                options=setores
                                onchange=(action "selecionaSetor")
                                noMatchesMessage="Sem registros"
                                triggerClass="selectSetor"
                                searchField="nome" as |setor|}}
                    {{setor.nome}}
                {{/power-select}}
                </div>            
                
                <div class="input-field col s12 m3 combo">
                <div class="labelForm">Turno</div>
                {{#power-select selected=assistencia.turno
                                options=turnos
                                onchange=(action "selecionaTurno")
                                noMatchesMessage="Sem registros" as |turno|}}
                    {{turno}}
                {{/power-select}}
                </div>
                <div class="col s12 m2">
                    {{input-text label="Valor" type="tel" value=assistencia.valor mask="#.##0,00" reverseMask=true}}
                </div>            
            </div>
          <div class="row">
            <div class="col s12 right-align">
              <a class="btn wave-effects wave-light btn-form" role="button" {{action "cancelarEdicao"}}>Cancelar</a>
              <a class="excluir btn wave-effects wave-light btn-form" role="button" {{action "confirmarExclusao"}}>Excluir</a>
              <button type="submit" class="salvar btn wave-effects wave-light btn-form">Atualizar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{modal-confirm idModal="modalConfirmarExclusao" title="Confirmação" content="Deseja excluir esta assistência?" actionConfirm=(action "excluirAssistencia")}}
{{outlet}}

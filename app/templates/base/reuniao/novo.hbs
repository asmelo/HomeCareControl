<div class="row formulario">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <form {{action "salvarReuniao" on="submit"}}>
          <div class="row">
            <h4>Nova Reunião</h4>
            <div class="input-field col s12 m3">
              <label>Data</label>
              {{pikaday-input readonly="readonly" value=dtReuniao onSelection=(action "selecionaData") format="DD/MM/YYYY"}}
            </div>
            <div class="col s12 m3">
              {{input-text label="Duração" inputClass="duracao" type="tel" value=duracao mask="00:00"}}
            </div>
            <div class="col s12 m3 labelNoForm"> 
              <div class="labelForm">Valor</div>             
              {{valor}}
            </div>            
            <div class="col s12">
              {{input-text label="Descricao" inputClass="descricao" value=descricao maxlength=70}}
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button type="submit" class="salvar btn wave-effects wave-light">Salvar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{outlet}}
